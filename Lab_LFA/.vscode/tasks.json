{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        
                {
                    "label": "Build Kolakoski",
                    "type": "shell",
                    "command": "g++",
                    "args": [
                        "-g",                // Debug symbols
                        "-O2",               // Optimization level
                        "${workspaceFolder}/kolakoski/kolakoski.cpp",  // C++ source file
                        "-o", "${workspaceFolder}/kolakoski/kolakoski"  // Output binary
                    ],
                    "group": {
                        "kind": "build",
                        "isDefault": true
                    }
                },
                {
                    "label": "Run with Heaptrack and Profile",
                    "type": "shell",
                    "dependsOn": "Build Kolakoski",
                    "command": "heaptrack",
                    "args": [
                        "${workspaceFolder}/kolakoski/kolakoski",  // Path to the compiled binary
                        "-o", "${workspaceFolder}/kolakoski/output.txt"  // Output memory profiling data to file
                    ],
                    "problemMatcher": [],
                    "isBackground": true
                },
                {
                    "label": "Open Heaptrack GUI",
                    "type": "shell",
                    "dependsOn": "Run with Heaptrack and Profile",
                    "command": "heaptrack_gui",
                    "args": [
                        "${workspaceFolder}/kolakoski/output.txt"  // Open the profiling data in the GUI
                    ],
                    "problemMatcher": [],
                    "isBackground": true
                }       
    ],
    "version": "2.0.0"
}